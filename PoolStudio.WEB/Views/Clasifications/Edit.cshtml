@model PoolStudio.WEB.Models.Clasification

@{
    ViewData["Title"] = "Edit";
}


<style>
    #edit-body {
        margin-top: 10%;
        margin-left: auto;
        margin-right: auto;
        max-width: initial;
        width: 70%;
    }
</style>

<div id="edit-body">

    <h2>Editar</h2>


    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ClasificationId" />
                <div class="form-group">
                    <label asp-for="ItemType" class="control-label"></label>
                    <input asp-for="ItemType" class="form-control" />
                    <span asp-validation-for="ItemType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-success" /> |
                    <a class="btn btn-dark" asp-action="Index">Regresar</a>
                </div>
            </form>
        </div>
    </div>



    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>