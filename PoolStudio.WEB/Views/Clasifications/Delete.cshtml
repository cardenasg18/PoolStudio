@model PoolStudio.WEB.Models.Clasification

@{
    ViewData["Title"] = "Delete";
}

<style>
    #delete-body {
        margin-top: 10%;
        margin-left: auto;
        margin-right: auto;
        max-width: initial;
        width: 70%;
    }
</style>

<div id="delete-body">

    <h3>¿Está seguro que desea eliminar esto?</h3>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ItemType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ItemType)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ClasificationId" />
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a class="btn btn-dark" asp-action="Index">Regresar</a>
            </form>
        </div>

</div>